[python]
files = thoth_pkgdeps/*.py,thoth_pkgdeps/handlers/*.py
bears = PEP8Bear,BanditBear,PyImportSortBear
language = Python
max_line_length = 121

[Makefiles]
bears = LineLengthBear
files = Makefile
max_line_length = 121

[commit]
bears = GitCommitBear
shortlog_trailing_period = False
shortlog_regex = ([^:]*|[^:]+[^ ]: [A-Z0-9*].*)
shortlog_length = 95

